{
  "name": "docforge",
  "version": "0.0.1",
  "private": true,
  "type": "module",
  "description": "Modern, AI-native document editing for spreadsheets and presentations",
  "scripts": {
    "dev": "pnpm -r dev",
    "build": "pnpm -r build",
    "test": "pnpm -r test",
    "test:e2e": "pnpm -r test:e2e",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "clean": "pnpm -r clean && rimraf node_modules"
  },
  "keywords": [
    "spreadsheet",
    "presentation",
    "excel",
    "powerpoint",
    "ai",
    "editor",
    "canvas"
  ],
  "author": "",
  "license": "MIT",
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=8.0.0"
  },
  "packageManager": "pnpm@8.15.0",
  "devDependencies": {
    "eslint": "^9.16.0",
    "@eslint/js": "^9.16.0",
    "typescript-eslint": "^8.18.0",
    "eslint-plugin-react": "^7.37.0",
    "eslint-plugin-react-hooks": "^5.1.0",
    "globals": "^15.13.0",
    "prettier": "^3.4.0"
  }
}
