{
  "name": "@docforge/spreadsheet",
  "version": "0.0.1",
  "description": "Spreadsheet editor for DocForge",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "clean": "rimraf dist"
  },
  "keywords": [
    "docforge",
    "spreadsheet",
    "excel",
    "editor"
  ],
  "license": "MIT",
  "dependencies": {
    "@docforge/core": "workspace:*",
    "@docforge/ai-bridge": "workspace:*",
    "@fortune-sheet/core": "^1.0.4",
    "@fortune-sheet/react": "^1.0.2",
    "immer": "^10.0.0"
  },
  "peerDependencies": {
    "react": "^18.0.0",
    "react-dom": "^18.0.0"
  },
  "devDependencies": {
    "@testing-library/react": "^14.0.0",
    "@testing-library/user-event": "^14.0.0",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "jsdom": "^25.0.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "tsup": "^8.0.0",
    "typescript": "^5.3.0",
    "vitest": "^1.0.0",
    "rimraf": "^5.0.0"
  }
}
